<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diamonddesign.rasvo.weatherclient.fragments.DailyDetailFragment">

    <LinearLayout
        android:id="@+id/daily_fragment_detail_linear_header"
        android:orientation="vertical"
        android:background="@mipmap/day"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageView
            android:elevation="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/ic_1"
            android:id="@+id/daily_fragment_detail_header_icon"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/daily_fragment_detail_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/daily_fragment_detail_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/night_daily_fragment_detail_grid_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
